{
  "info": {
    "name": "BNDES Projetos API",
    "description": "Coleção para testes automatizados da API BNDES Projetos (Auth + Projects)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:8080" },
    { "key": "token", "value": "" },
    { "key": "projectId", "value": "" }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/auth/register",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"teste@teste.com\",\n  \"password\": \"123456\"\n}",
              "options": { "raw": { "language": "json" } }
            },
            "header": [{ "key": "Content-Type", "value": "application/json" }]
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status 201\", () => pm.response.code === 201);"
                ]
              }
            }
          ]
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/auth/login",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"teste@teste.com\",\n  \"password\": \"123456\"\n}",
              "options": { "raw": { "language": "json" } }
            },
            "header": [{ "key": "Content-Type", "value": "application/json" }]
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status 200\", () => pm.response.code === 200);",
                  "const json = pm.response.json();",
                  "pm.environment.set(\"token\", json.token);"
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Projects",
      "item": [
        {
          "name": "Create Project",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/projects",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Projeto de Modernização\",\n  \"description\": \"Projeto para modernizar sistemas legados\",\n  \"value\": 150000,\n  \"active\": true,\n  \"startDate\": \"2025-01-01\",\n  \"endDate\": \"2025-12-31\"\n}",
              "options": { "raw": { "language": "json" } }
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status 201\", () => pm.response.code === 201);",
                  "pm.environment.set(\"projectId\", pm.response.json().id);"
                ]
              }
            }
          ]
        },
        {
          "name": "Get Project by Id",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/projects/{{projectId}}",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ]
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status 200\", () => pm.response.code === 200);"
                ]
              }
            }
          ]
        },
        {
          "name": "Update Project",
          "request": {
            "method": "PUT",
            "url": "{{baseUrl}}/projects/{{projectId}}",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Projeto Atualizado\",\n  \"description\": \"Descrição atualizada\",\n  \"value\": 200000,\n  \"active\": true,\n  \"startDate\": \"2025-01-01\",\n  \"endDate\": \"2025-12-31\"\n}",
              "options": { "raw": { "language": "json" } }
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status 200\", () => pm.response.code === 200);"
                ]
              }
            }
          ]
        },
        {
          "name": "List Projects",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/projects",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ]
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status 200\", () => pm.response.code === 200);"
                ]
              }
            }
          ]
        },
        {
          "name": "Delete Project (Logical)",
          "request": {
            "method": "DELETE",
            "url": "{{baseUrl}}/projects/{{projectId}}",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ]
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status 204\", () => pm.response.code === 204);"
                ]
              }
            }
          ]
        }
      ]
    }
  ]
}
